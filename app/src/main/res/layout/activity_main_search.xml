<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSearch">

    <fragment
        android:id="@+id/headerFragment"
        android:name="com.example.booking.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="159dp"
        app:layout_constraintBottom_toTopOf="@+id/placeInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <EditText
        android:id="@+id/placeInput"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Place"
        android:inputType="text"
        android:textColorHint="#007BFF"
        android:tooltipText="Hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerFragment" />

    <EditText
        android:id="@+id/placeInput2"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Room type"
        android:inputType="text"
        android:textColorHint="#007BFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeInput" />

    <EditText
        android:id="@+id/numberOfPeopleInput"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="People"
        android:inputType="number"
        android:textColorHint="#007BFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/placeInput"
        app:layout_constraintTop_toBottomOf="@+id/headerFragment" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="92dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="54dp"
        android:backgroundTint="#007BFF"
        android:text="Go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/placeInput2"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPeopleInput" />

    <ListView
        android:id="@+id/resutlList"
        android:layout_width="398dp"
        android:layout_height="616dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeInput2"
        tools:listitem="@layout/fragment_search_result" />

</androidx.constraintlayout.widget.ConstraintLayout>