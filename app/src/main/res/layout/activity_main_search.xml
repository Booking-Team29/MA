<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSearch">

    <EditText
        android:id="@+id/placeInput"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Place"
        android:inputType="text"
        android:textColorHint="#007BFF"
        android:tooltipText="Hello"
        app:layout_constraintBottom_toTopOf="@+id/placeInput2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/placeInput2"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Room type"
        android:inputType="text"
        android:textColorHint="#007BFF"
        app:layout_constraintBottom_toTopOf="@+id/resutlList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeInput" />

    <EditText
        android:id="@+id/numberOfPeopleInput"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="People"
        android:inputType="number"
        android:textColorHint="#007BFF"
        app:layout_constraintBottom_toTopOf="@+id/goButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placeInput"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="92dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#007BFF"
        android:text="Go"
        app:layout_constraintBottom_toTopOf="@+id/resutlList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placeInput2"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPeopleInput" />

    <ListView
        android:id="@+id/resutlList"
        android:layout_width="398dp"
        android:layout_height="574dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeInput2"
        tools:listitem="@layout/fragment_search_result" />

</androidx.constraintlayout.widget.ConstraintLayout>